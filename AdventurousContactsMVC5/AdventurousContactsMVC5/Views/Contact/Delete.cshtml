@model AdventurousContactsMVC5.Models.Contact

@{
    ViewBag.Title = "Confirm deletion of contact";
}

<h2>Remove contact</h2>
@Html.Partial("_FlashMessage")
<h3>Are you sure that you want to delete <strong>@Model.FirstName @Model.LastName (@Model.EmailAddress)?</strong></h3>
<div>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" } )
            <input type="submit" value="Yes, delete contact" class="btn btn-default" />
            
        </div>
    }
</div>
